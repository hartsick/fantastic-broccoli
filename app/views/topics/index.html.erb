<h1>All topics</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th># Posts</th>
        <th>Most recent post</th>
    </tr>
    <% @topics.each do |topic| %>
        <tr>
            <td><%= link_to topic.title, topic_path(topic) %></td>
            <td><%= topic.author.email %></td>
            <td><%= topic.posts.count %></td>
            <td><%= time_ago_in_words(topic.posts.last.created_at) %></td>
        </tr>
    <% end %>
</table>
<%= link_to "New topic", new_topic_path, class: "btn" %>
