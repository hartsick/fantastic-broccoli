<% title("Edit profile") %>

<h1 class="text-lg px-1 inline-block bg-secondary-700 text-white">editing <%= @profile.user.username %>'s profile</h1>
<div class="py-3">
    <%= form_with model: @profile, url: profile_path(@profile.user) do |f| %>
        <%= render 'shared/errors', errors: @profile.errors %>

        <%= f.label :about_me, 'whatever you want here:', class: "block font-semibold py-1 text-primary-100" %>
        <%= f.text_area :about_me, class: "form-textarea border-none w-full h-36 md:w-6/12 py-1 px-1 mb-3 bg-primary-100" %>

        <%= f.submit 'update', class: "block btn" %>
    <% end %>
</div>