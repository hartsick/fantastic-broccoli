<h1 class="text-lg pb-1">forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, 'email', class: "block font-semibold" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", autocapitalize: "off", spellcheck: "false", class: "border-none w-full md:w-6/12 py-1 px-1 mb-3 bg-sky-100" %>
  </div>

  <div class="actions py-3">
    <%= f.submit "send me reset password instructions", class: "btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
