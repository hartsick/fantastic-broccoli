<h1 class="text-lg pb-1">log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :login, 'username or email', class: "block font-semibold" %>
    <%= f.text_field :login, autofocus: true, autocomplete: "email", autocapitalize: "off", spellcheck: "false", class: "border-none w-full md:w-6/12 py-1 px-1 mb-3 bg-primary-100" %>
  </div>

  <div class="field">
    <%= f.label :password, 'password', class: "block font-semibold" %>
    <%= f.password_field :password, autocomplete: "current-password", autocapitalize: "off", spellcheck: "false", class: "border-none w-full md:w-6/12 py-1 px-1 mb-3 bg-primary-100" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'remember me', class: "font-semibold" %>
    </div>
  <% end %>

  <div class="actions py-3">
    <%= f.submit "log in", class: "block btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
